<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" android:drawable="?attr/selectableItemBackground"/>
    <item   >
        <shape  android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerX="9%"
                android:centerColor="#fff"
                android:startColor="#fff"
                android:endColor="#fff"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />



        </shape>
    </item>



</selector>

