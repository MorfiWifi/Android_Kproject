<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true"   >
        <shape  android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerX="9%"
                android:centerColor="#bebebe"
                android:startColor="#bebebe"
                android:endColor="#bebebe"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="2dp"
                android:color="#2e2d26"
                />

        </shape>
    </item>


    <item   >
        <shape  android:shape="rectangle" >
            <corners
                android:radius="5dp"
                />
            <gradient
                android:angle="90"
                android:centerX="9%"
                android:centerColor="#fff"
                android:startColor="#fff"
                android:endColor="#fff"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <stroke
                android:width="2dp"
                android:color="#2e2d26"
                />

        </shape>
    </item>



</selector>

