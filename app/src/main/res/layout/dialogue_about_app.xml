<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"

    android:layout_gravity="center">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/imb_close"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/ic_close_gray" />

        <ImageView
            android:id="@+id/im_icon"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/im_icon"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="سامانه ها"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_app_version"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_app_name"
            android:textSize="12sp"
            android:text="version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/tv_app_intro"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv_app_version"
            android:textSize="14sp"
            android:text="@string/app_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_get_source_cod"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:background="@color/blue_700"
            android:textColor="@color/white"
            android:text="دریافت کد منبع"
            android:layout_below="@id/tv_app_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



    </RelativeLayout>


</LinearLayout>