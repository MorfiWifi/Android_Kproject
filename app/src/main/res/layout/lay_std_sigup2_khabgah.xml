<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_isstudying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="خوابگاه"
        android:gravity="center"
        />

    <Spinner
        android:id="@+id/sp_kh"
        android:background="@drawable/background_white_mid_thick"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:id="@+id/tv_night_mod"
        android:layout_below="@id/tv_isstudying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="بلوک"
        android:gravity="center"
        />

    <Spinner
        android:id="@+id/sp_block"
        android:background="@drawable/background_white_mid_thick"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:layout_below="@id/tv_isstudying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="اتاق"
        android:gravity="center"
        />

    <Spinner
        android:id="@+id/sp_room"
        android:background="@drawable/background_white_mid_thick"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>





</LinearLayout>
