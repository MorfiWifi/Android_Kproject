<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/bottom_sheet_std_gozaresh_rec"
    android:layout_width="match_parent"
    android:layout_height="500dp"

    android:orientation="vertical"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/buttom_big_white"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:textColor="@android:color/black" >



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:id="@+id/tv_std_queue_date"
                android:text="تاربخ"
                android:gravity="center"
                />



            <ImageView
                android:id="@+id/im_close_message"
                android:src="@drawable/ic_close"
                android:layout_weight="0.7"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:orientation="vertical"
                android:background="@drawable/background_rect_stork"
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_gozaresh_type"
                    android:layout_weight="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="نوع گزارش : وضغیت"
                    android:textColor="@color/black"
                    android:gravity="center"
                    />

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ScrollView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:textColor="@color/black"
                            android:id="@+id/tv_gozaresh_matn_rec"
                            android:gravity="center"
                            android:text="matn"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </ScrollView>






                </LinearLayout>







            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.56"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <Spinner
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:id="@+id/sp_new_state"
                    android:layout_margin="10dp"
                    android:text="حذف"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <Button
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:layout_weight="1.3"
                    android:visibility="visible"
                    android:id="@+id/btn_std_queue_accept"
                    android:layout_margin="10dp"
                    android:background="@drawable/buttom_green_bg"
                    android:text="وضعیت جدید"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />




            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:background="#00ffffff"
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>