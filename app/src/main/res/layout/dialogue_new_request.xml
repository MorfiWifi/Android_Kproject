<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_request_header"
        android:textSize="20sp"
        android:gravity="center"
        android:text="درخواست"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_below="@id/tv_request_header"
        android:background="@drawable/background_white_mid_thick"
        android:id="@+id/sp_thign"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.TextInputLayout
        android:visibility="visible"
        android:layout_below="@id/sp_thign"
        android:id="@+id/ti_request_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/sp_thign"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttom_big_white"
        android:paddingTop="15dp">

        <android.support.design.widget.TextInputEditText
            android:maxLength="3"
            android:maxLines="1"
            android:inputType="number"
            android:background="@null"
            android:id="@+id/te_request_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:padding="10dp"
            android:hint="تعداد"
            />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_send_request"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ti_request_count"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="ارسال"
        android:background="@drawable/buttom_blue_stack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_below="@id/btn_send_request"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>








</RelativeLayout>