<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:clickable="true"
    android:id="@+id/rel_back"
    android:background="@drawable/background_message_recive"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:padding="4dp"
        android:layout_marginLeft="4dp"
        android:layout_alignParentTop="true"
        app:civ_border_width="1dp"
        app:civ_border_overlay="false"
        app:civ_border_color="@color/black"
        android:id="@+id/im_role_image"
        android:src="@drawable/ic_account"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:maxLength="24"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/im_role_image"
        android:id="@+id/tv_role_name"
        android:text="role_naem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:maxLength="30"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_role_name"
        android:layout_toRightOf="@id/im_role_image"
        android:id="@+id/tv_username"
        android:text="user_naem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageButton
        android:id="@+id/im_user_info"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_info"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="60dp" />


</RelativeLayout>