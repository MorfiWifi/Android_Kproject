<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="4dp"
    android:id="@+id/rel_message_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <RelativeLayout
        android:id="@+id/rel_tickt_message_item"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="@drawable/background_message_recive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.wang.avi.AVLoadingIndicatorView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/avi"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/AVLoadingIndicatorView.Large"
            android:visibility="gone"
            app:indicatorName="BallTrianglePathIndicator"
            app:indicatorColor="#bf680508"
            />


        <RelativeLayout
            android:gravity="bottom"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="4dp"
                android:layout_alignBottom="@id/tv_tick_header"
                android:layout_marginStart="5dp"
                android:id="@+id/tv_tick_date"
                android:textSize="10sp"
                android:layout_marginEnd="4dp"
                android:text="1990/12/25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginRight="5dp"
                android:layout_toEndOf="@id/tv_tick_date"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:id="@+id/tv_tick_header"
                android:text="HEAD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>






        <TextView
            android:id="@+id/tv_tick_meddsge_extra_data"
            android:textSize="10sp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"
            android:text="1990/12/25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>




</RelativeLayout>