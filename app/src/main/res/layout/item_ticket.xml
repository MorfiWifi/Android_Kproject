<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="4dp"
    android:id="@+id/rel_tickt_item"
    android:clickable="true"
    android:background="@drawable/background_ticket_item"
    android:foreground="?attr/selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/avi"
        android:id="@+id/im_ticket"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:src="@drawable/ic_ticket"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:id="@+id/avi"
        android:layout_width="60dp"
        android:layout_height="60dp"
        style="@style/AVLoadingIndicatorView.Large"
        android:visibility="gone"
        app:indicatorName="BallTrianglePathIndicator"
        app:indicatorColor="#bfff0000"
        />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_tick_header"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/im_ticket"
        android:text="HEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@id/tv_tick_header"
        android:id="@+id/tv_tick_review"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/im_ticket"
        android:text="HEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignParentRight="true"
        android:id="@+id/tv_tick_date"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@id/tv_tick_header"
        android:text="HEADER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>