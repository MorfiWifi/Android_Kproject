<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/buttom_big_white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <Spinner
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/spinner_roles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="سطح دریافت کننده:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/spinner_roles"
        />

    <TextView
        android:layout_below="@id/spinner_roles"
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:textColor="#FFF"
        />

    <android.support.design.widget.TextInputEditText
        android:lines="1"
        android:maxLength="60"
        android:background="@drawable/buttom_big_white"
        android:id="@+id/ti1"
        android:layout_below="@id/text"
        android:hint="موضوع"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <android.support.design.widget.TextInputEditText
        android:layout_marginTop="15dp"
        android:background="@drawable/buttom_big_white"
        android:id="@+id/ti2"
        android:layout_below="@id/ti1"
        android:hint="متن"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp" />



    <Button
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/background_light_blue"
        android:id="@+id/dialogButtonOK"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="ارسال پیام"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/ti2"
        />

    <Space
        android:layout_below="@id/dialogButtonOK"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</RelativeLayout>