<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/background_white_mid_thick"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_margin="5dp"
        android:id="@+id/scroll_view"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:gravity="right"
                android:hint="TEST"
                android:id="@+id/tv_usename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:gravity="right"
                android:hint="TEST"
                android:id="@+id/tv_real_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:gravity="right"
                android:hint="TEST"
                android:id="@+id/tv_rel_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:gravity="right"
                android:hint="TEST"
                android:id="@+id/tv_national_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:gravity="right"
                android:hint="TEST"
                android:id="@+id/tv_father_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textDirection="rtl"
                android:layout_gravity="right"
                android:textColor="@color/black"
                android:gravity="right"
                android:hint="TEST"
                android:id="@+id/tv_use_kh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />




        </LinearLayout>
    </ScrollView>


    <Button
        android:textColor="@color/white"
        android:background="@drawable/buttom_green_bg"
        android:textSize="20sp"
        android:id="@+id/btn_ok"
        android:text="п«пе"
        android:layout_below="@id/scroll_view"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</RelativeLayout>