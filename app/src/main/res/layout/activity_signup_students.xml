<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.morfiwifi.morfi_project_samane.SignupStudentsActivity">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/gray_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ثبت نام"
            android:background="@color/orange_400"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />




    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <ScrollView
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="right"
                android:background="@drawable/buttom_big_white"
                android:layout_margin="20dp"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کد ملی"/>

                <LinearLayout
                    android:layout_weight="0.1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000000"
                            android:gravity="center|bottom"
                            android:id="@+id/ti_kod_melli"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام"/>

                <LinearLayout

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000000"
                            android:gravity="center|bottom"
                            android:id="@+id/ti_name"


                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام خانوادگی"/>

                <LinearLayout

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000000"
                            android:gravity="center|bottom"
                            android:id="@+id/ti_lastname"


                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام کاربری"/>

                <LinearLayout

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000000"
                            android:gravity="center|bottom"
                            android:id="@+id/ti_username"


                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>




                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رمز عبور"/>


                <LinearLayout
                    android:background="@drawable/buttom_big_white"
                    android:gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ti_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000000"
                            android:gravity="center|bottom"
                            android:inputType="textPassword"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تکرار رمز عبور"/>


                <LinearLayout
                    android:background="@drawable/buttom_big_white"
                    android:gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="0.1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ti_password_rep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#000000"
                            android:gravity="center|bottom"
                            android:inputType="textPassword"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>


        



    </ScrollView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.23"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_remember"
            android:text="اطلاع بده"
            android:layout_weight="0.1"
            android:textColor="#0288D1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <Button
            android:onClick="signup"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.1"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttom_blue_stack"
            android:text="ثبت نام"
            android:textColor="@color/white"
            />


    </LinearLayout>





    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/gray_back"
        android:layout_weight="0.24"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:onClick="go_login_page"
            android:id="@+id/tv_go_login"
            android:textColor="#0288D1"
            android:gravity="center"
            android:text="ورود"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>




</LinearLayout>
