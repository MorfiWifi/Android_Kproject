<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.morfiwifi.morfi_project_samane.SignupStudentsActivity">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/gray_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ثبت نام"
            android:background="@color/orange_400"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />




    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <ScrollView
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="right"
                android:background="@drawable/buttom_big_white"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="کد ملی"/>

                <LinearLayout
                    android:background="@drawable/buttom_big_white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                        <EditText
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:id="@+id/ti_kod_melli"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />



                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره دانشجویی"/>

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@null"
                            android:layout_gravity="center"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:id="@+id/ti_student_cod"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>


                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام"/>

                <LinearLayout

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:id="@+id/ti_name"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام خانوادگی"/>

                <LinearLayout

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:id="@+id/ti_lastname"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام کاربری"/>

                <LinearLayout

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:id="@+id/ti_username"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>




                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="رمز عبور"/>


                <LinearLayout
                    android:background="@drawable/buttom_big_white"
                    android:gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true">

                        <EditText

                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:id="@+id/ti_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="textPassword"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تکرار رمز عبور"/>


                <LinearLayout
                    android:background="@drawable/buttom_big_white"
                    android:gravity="bottom"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:passwordToggleEnabled="true">

                        <EditText
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:id="@+id/ti_password_rep"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="textPassword"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_2nd"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="شماره تماس"/>

                <LinearLayout
                    android:id="@+id/lin_2nd"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:maxLines="1"
                        android:maxLength="20"
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:id="@+id/ti_phone_number"
                            android:inputType="phone"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/tv_3rd"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نام پدر"/>

                <LinearLayout
                    android:id="@+id/lin_3rd"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:gravity="bottom"
                        android:background="@drawable/buttom_big_white"
                        app:passwordToggleEnabled="true"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <EditText
                            android:layout_marginBottom="10dp"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:maxLines="1"
                            android:maxLength="20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="end"
                            android:id="@+id/ti_father_name"
                            android:inputType="text"
                            android:textColorLink="@color/blue_grey_900" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>

                <TextView
                    android:id="@+id/tv_4th"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="نشانی محل سکونت"/>

                <LinearLayout

                    android:id="@+id/lin_4th"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buttom_big_white"
                        android:gravity="bottom">

                        <EditText
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:id="@+id/ti_address"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="end"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:lines="3"
                            android:maxLength="100"
                            android:maxLines="3" />

                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>








                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/lin_usekhab"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Switch
                        android:id="@+id/sw_using_khab"
                        android:gravity="center"
                        android:text="  خوابگاهی ؟  "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/lin_expandable_khabgah"
                    android:layout_margin="5dp"
                    android:background="@drawable/background_white_mid_thick"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    >

                    <com.github.florent37.expansionpanel.ExpansionHeader
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        app:expansion_headerIndicator="@id/headerIndicator2"
                        app:expansion_layout="@id/expansionLayout2"
                        >

                        <!-- app:expansion_toggleOnClick="true" -->

                        ...
                        <!-- HEADER INDICATOR -->

                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="مشخصات خوابگاه"
                            />

                        <android.support.v7.widget.AppCompatImageView
                            android:adjustViewBounds="true"
                            android:id="@+id/headerIndicator2"
                            android:layout_gravity="center_vertical|right"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_width="wrap_content"
                            app:srcCompat="@drawable/ic_expansion_header_indicator_grey_24dp" />


                    </com.github.florent37.expansionpanel.ExpansionHeader>

                    <com.github.florent37.expansionpanel.ExpansionLayout
                        android:id="@+id/expansionLayout2"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <!-- CONTENT -->
                        <include layout="@layout/lay_std_sigup2_khabgah"/>



                    </com.github.florent37.expansionpanel.ExpansionLayout>


                </LinearLayout>



                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>


        



    </ScrollView>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="0.23"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw_remember"
            android:text="اطلاع بده"
            android:layout_weight="0.1"
            android:textColor="#0288D1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <Button
            android:id="@+id/btn_signup_ac"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.1"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/buttom_blue_stack"
            android:text="ثبت نام"
            android:textColor="@color/white"
            />


    </LinearLayout>





    <LinearLayout
        android:layout_margin="20dp"
        android:background="@drawable/gray_back"
        android:layout_weight="0.24"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:onClick="go_login_page"
            android:id="@+id/tv_go_login"
            android:textColor="#0288D1"
            android:gravity="center"
            android:text="ورود"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>




</LinearLayout>
