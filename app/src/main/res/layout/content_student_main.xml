<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound_gradient"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.apps.morfiwifi.morfi_project_samane.ui.student.StudentMainActivity"
    tools:showIn="@layout/app_bar_student_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:background="@drawable/button_mid_thick"
                        android:id="@+id/rel_prof"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="30dp"
                            android:scaleType="fitCenter"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/im_profile"
                            android:background="@null"
                            android:src="@drawable/ic_ticket"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_profile"
                            android:layout_alignEnd="@id/im_profile"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="تیکت"
                            android:layout_alignBottom="@id/im_profile"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_request"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/im_request"
                            android:background="@null"
                            android:src="@drawable/ic_request"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_request"
                            android:layout_alignEnd="@id/im_request"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="درخواست"
                            android:layout_alignBottom="@id/im_request"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_report"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:id="@+id/im_report"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_report" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_report"
                            android:layout_alignEnd="@id/im_report"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="گزارش"
                            android:layout_alignBottom="@id/im_report"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_transfer"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/im_transfer"
                            android:background="@null"
                            android:src="@drawable/ic_transfer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_transfer"
                            android:layout_alignEnd="@id/im_transfer"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="جابجایی"
                            android:layout_alignBottom="@id/im_transfer"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_cancelation"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/im_cancelation"
                            android:background="@null"
                            android:src="@drawable/ic_getout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_cancelation"
                            android:layout_alignEnd="@id/im_cancelation"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="انصراف"
                            android:layout_alignBottom="@id/im_cancelation"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_inbox"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:id="@+id/im_inbox"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@null"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_inbox" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_broudcast"
                            android:layout_alignEnd="@id/im_inbox"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="صندوق پیام"
                            android:layout_alignBottom="@id/im_inbox"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_feedback"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/im_feedback"
                            android:background="@null"
                            android:src="@drawable/ic_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/imb_new_feedback"
                            android:layout_alignEnd="@id/im_feedback"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="پیشنهاد"
                            android:layout_alignBottom="@id/im_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <RelativeLayout
                        android:id="@+id/rel_logout"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_mid_thick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:layout_marginBottom="5dp"
                            android:paddingBottom="20dp"
                            android:scaleType="fitCenter"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/im_logout"
                            android:background="@null"
                            android:src="@drawable/ic_logout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/im_new_logout"
                            android:layout_alignEnd="@id/im_logout"
                            android:src="@drawable/ic_new"
                            android:layout_width="20dp"
                            android:layout_height="20dp" />

                        <TextView
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:text="خروج از حساب"
                            android:layout_alignBottom="@id/im_logout"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>







        </LinearLayout>

    </ScrollView>




</RelativeLayout>
