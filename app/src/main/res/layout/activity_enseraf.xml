<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.student.EnserafActivity">

    <Button
        android:onClick="enseraf_taeed"
        android:id="@+id/btn_enseraf_taiid"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttom_blue_stack"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="تایید"
        />

    <ImageView
        android:id="@+id/img_time_pic"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="ات"
        android:onClick="pick_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/ic_date_range"
        android:layout_alignRight="@id/tv_enseraf_date"
        />

    <TextView
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/tv_enseraf_date"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:hint="تاریخ انتخواب شده"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="5dp"
        android:layout_below="@id/img_time_pic"
        android:id="@+id/txin_enseraf_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center|top"

            android:hint="دلیل انصراف" />
    </android.support.design.widget.TextInputLayout>


</RelativeLayout>